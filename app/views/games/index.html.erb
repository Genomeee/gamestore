
<p id="notice"><%= notice %></p>

<div id="preloder">
  <div class="loader"></div>
</div>


<!-- Page top section -->
<section class="games-section">
  <div class="page-info">
    <h2>Games</h2>
    <div class="site-breadcrumb">
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Genre</th>
          <th>Studio</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= game.price %></td>
            <td><%= game.genre %></td>
            <td><%= game.studio.try(:name) %></td>
            <td><%= link_to 'Show', game %></td>
            <% if signed_in? -%>
              <td><%= link_to 'Edit', edit_game_path(game) %></td>
              <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else -%>
            <% end -%>
          </tr>
        <% end %>
        </tbody>
      </table>
      <% if signed_in? -%>
      <%= link_to 'New Game', new_game_path %>
      <% else -%>
      <% end -%>
    </div>
  </div>
</section>
<!-- Page top end-->



<br>